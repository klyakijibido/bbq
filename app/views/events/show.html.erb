<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})"
      %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h5><%= l @event.datetime, format: :short %></h5>
            <h3><small>
              <%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %>
            </small></h3>
            <p><%= @event.description %></p>

            <% if current_user_can_edit?(@event) %>
              <div class="row mb-2">
                <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-primary mx-3' %>
                <%= button_to 'Удалить', event_path(@event), class: 'btn btn-primary', method: :delete,
                    title: 'Удалить вопрос', data: {confirm: t('confirms.delete')} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
        <div class="buffer-both">
          <%= render partial: 'comments/comment', collection: @event.comments %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="event-owner">
        <h4>Зовет:</h4>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <div class="event-subscribtions">
        <h4>Пойдут:</h4>
        <div>
          <p>
            <%= render(partial: 'subscriptions/subscription',
                       collection: @event.subscriptions.except(@new_subscription))  %>
          </p>
        </div>
      </div>
      <div class="event-suvscribtion-form">
        <h4>Я пойду:</h4>

      </div>
    </div>
  </div>
</div>
