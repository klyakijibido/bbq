<h2 class='my-4'>Регистрация</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <form>
    <div class='form-group'>
      <label for='user_email'><%= t('activerecord.attributes.user.email') %></label>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email', id: 'user_email',
                        placeholder: t('activerecord.attributes.user.email') %>
    </div>
    <div class='form-group'>
      <label for='user_name'><%= t('activerecord.attributes.user.name') %></label>
      <%= f.text_field :name, class: 'form-control', autocomplete: 'name', id: 'user_name',
                       placeholder: t('activerecord.attributes.user.name') %>
    </div>
    <div class='form-group'>
      <label for='user_password'><%= t('activerecord.attributes.user.password') %></label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br/>
      <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password', id: 'user_password',
                           placeholder: t('activerecord.attributes.user.password')  %>
    </div>
    <div class='form-group'>
      <label for='user_password2'><%= t('activerecord.attributes.user.password_confirmation') %></label>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password',
                           id: 'user_password2', placeholder: t('activerecord.attributes.user.password_confirmation') %>
    </div>
    <div class='actions'>
      <%= f.submit t('controllers.device.sign_up'), class: 'btn btn-primary' %>
      или<%= render 'devise/shared/links' %>
    </div>
  </form>
<% end %>
