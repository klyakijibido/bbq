<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1><%= @user.name %></h1>
    </div>
  </div>

  <div class="row ">
    <div class="col-md-12 d-flex justify-content-center">
      <%= image_tag user_avatar(@user) %>
    </div>
  </div>

  <% if @user == current_user  %>
    <div class="row">
      <p class="col-md-12 buffer-top d-flex justify-content-center">
        <%= link_to "Редактировать профиль", edit_user_path(@user), class: "btn btn-primary" %>
      </p>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3 class="text-center">Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top text-center">Пользователь пока не создал событий</p>
      <% end %>
    </div>
  </div>
</div>
